<!-- courses-section 
			================================================== -->
<section class="courses-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="courses-top-bar ">
					<div class="courses-view col-md-4">
						<a href="courses.html"
							class="grid-btn active">
							<i class="fa fa-th-large"
								aria-hidden="true"></i>
						</a>
						<span>Showing all {{length}}
							results</span>
					</div>
					<div class="col-md-8">
						<form class="search-course row"
							method="GET">
							<div class="col-md-6">
								<input type="search"
									name="title"
									id="search_course"
									required
									placeholder="Search Courses..." />
							</div>
							<div class="col-md-3">
								<label for="inputState"
									class="form-label">Filter
									Price
									:
								</label>
								<select name="sort"
									id="inputState" required
									class="form-select">
									<option value="-price">
										Increase
									</option>
									<option value="+price">
										Decrease
									</option>
								</select>
							</div>
							<div class="col-md-3">
								<button type="submit" style="background-color: #007bff; color:white;
									width:80px" class="btn btn-primary">
									Search
								</button>
							</div>
						</form>

					</div>
				</div>

				<div class="row">

					{{#each courses}}
					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="course-post">
							<div
								class="course-thumbnail-holder">
								<a
									href="/course/{{this._id}}">
									<img src="{{this.imageCover}}"
										alt="">
								</a>
							</div>
							<div
								class="course-content-holder">
								<div
									class="course-content-main">
									<h2
										class="course-title">
										<a
											href="/course/{{this._id}}">{{this.title}}</a>
									</h2>
									<div
										class="course-rating-teacher">
										<div class="star-rating has-ratings"
											title="Rated 5.00 out of 5">
											<span
												style="width:100%">
												<span
													class="rating">{{this.ratingsAverage}}</span>
												<span
													class="votes-number">{{this.ratingsAverage}}</span>
											</span>
										</div>
										<a href="#"
											class="course-loop-teacher">{{this.instructors.name}}</a>
									</div>
								</div>
								<div
									class="course-content-bottom">
									<div
										class="course-students">
										<i
											class="material-icons">group</i>
										<span>{{this.enrolled}}</span>
									</div>
									<div
										class="course-price">
										<span>Â£{{this.price}}</span>
									</div>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>

			<div class="col-lg-4">
				<div class="sidebar">

					<div class="category-widget widget">
						<h2>Product categories</h2>
						<ul class="category-list">
							<li><a
									href="?category=Marketing">Marketing</a>
							</li>
							<li><a href="?category=IT">Information
									Technology</a>
							</li>
							<li><a
									href="?category=Languages">Languages</a>
							</li>
							<li><a
									href="?category=Business">Business</a>
							</li>
							<li><a
									href="?category=Design">Design</a>
							</li>
						</ul>
					</div>

					<div class="products-widget widget">
						<h2>Products</h2>
						<ul class="products-list">
							{{#each courses}}
							<li>
								<a
									href="/course?title={{this.title}}"><img
										src="{{this.imageCover}}"
										alt=""></a>
								<div class="list-content">
									<h3><a
											href="/course?title={{this.title}}">{{this.title}}</a>
									</h3>
									<span>${{this.price}}</span>
								</div>
							</li>
							{{/each}}
						</ul>
					</div>
					<div class="ads-widget widget">
						<a href="#">
							<img src="upload/blog/ad-banner.jpg"
								alt="">
						</a>
					</div>

				</div>
			</div>

		</div>

	</div>
</section>
