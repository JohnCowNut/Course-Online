{{#> user-profile-layout}}
{{> title-user titleName='Edit Course'}}
<div class="row">
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                <h4>Edit your Course</h4>
            </div>
            <div class="widget-inner">
                <form class="edit-profile m-b30"
                    action="/course" method="POST"
                    enctype="multipart/form-data">
                    <div class="">
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Title
                                Course</label>
                            <div class="col-sm-7">
                                <input class="form-control"
                                    name="title"
                                    value="{{course.title}}"
                                    required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Description
                                Your Course</label>
                            <div class="col-sm-7">
                                <input class="form-control"
                                    name="description"
                                    value="{{course.description}}"
                                    required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Category</label>
                            <div class="col-sm-7">
                                <select class="form-control"
                                    name="category"
                                    required>
                                    <option selected hidden>
                                        {{course.category}}
                                    </option>
                                    <option value="IT">IT
                                    </option>
                                    <option
                                        value="Marketing">
                                        Marketing</option>
                                    <option value="Design">
                                        Design</option>
                                    <option value="Design">
                                        Languages</option>
                                    <option
                                        value="Business">
                                        Business</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Difficulty:</label>
                            <div class="col-sm-7">
                                <select name="difficulty"
                                    required
                                    class="form-control">
                                    <option
                                        value="Beginners">
                                        Beginners</option>
                                    <option
                                        value="Intermediate">
                                        Intermediate
                                    </option>
                                    <option
                                        value="Advanced">
                                        Advanced</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Image:</label>
                            <div class="col-sm-7">
                                <img src="/{{course.imageCover}}"
                                    width="150px"
                                    height="100px"
                                    alt="imageCover"
                                    srcset="">
                                <input type="file" required
                                    name="imageCover"
                                    class="form-control-file"
                                    id="exampleFormControlFile1">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Price:</label>
                            <div class="col-sm-7">
                                <input class="form-control"
                                    value="{{course.price}}"
                                    type="number" required
                                    name="price" min='0'
                                    max="300">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label
                                class="col-sm-2 col-form-label">Description:</label>
                            <div class="col-sm-7">
                                <textarea id="addcourses"
                                    required
                                    class="form-control"
                                    name="textDescription">

                                      {{{course.textDescription}}}                              </textarea>
                            </div>

                        </div>

                    </div>
                    <div class="">
                        <div class="">
                            <div class="row">
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-7">
                                    <button type="submit"
                                        class="btn">Save
                                        changes</button>
                                    <button type="reset"
                                        class="btn btn-danger">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

{{/user-profile-layout}}