{{#> user-profile-layout}}
{{> title-user titleName='Admin Course'}}
<div class="row">
    {{#if courses.length}}

    <div class="container">
        <div class="row">
            {{#each courses}}
            <div
                class="col-sm-2 col-md-4 col-lg-3 mr-4 mb-5">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top"
                        src="/{{this.imageCover}}"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{this.title}}</h5>
                        <a href="/admin/course/{{this._id}}"
                            class="btn btn-primary mr-2 mb-3">Drop
                            Course</a>
                    </div>

                </div>
            </div>

            {{/each}}


        </div>
    </div>
    {{else}}
    <h2>No course your Course Store</h2>
    {{/if}}
</div>
{{/user-profile-layout}}