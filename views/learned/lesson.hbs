{{#> user-profile-layout}}
{{> title-user titleName='Lesson Course'}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Name Lesson</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each lessons}}
        <tr class="mb-5">
            <th scope="row">{{@index}}</th>
            <td>{{this.titleLesson}}</td>
            <td><a href="/user/learned/{{../idCourse}}/lesson/{{this._id}}/video"
                    role="button" class="btn btn-primary">
                    Learned Lesson
                </a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/user-profile-layout}}