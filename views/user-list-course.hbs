{{#> user-profile-layout}}
{{> title-user titleName='List Course'}}
<div class="row">
    {{#if courses.length}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Title Course</th>
                <th scope="col">Image Course</th>
                <th scope="col">Price Course</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>

        <tbody>

            {{#each courses}}
            <tr>
                <th scope="row">{{@index }}:</th>
                <td>{{this.title}}</td>
                <td><img src="{{this.imageCover}}"
                        width="150px" height="100px" alt="#"
                        class="img-responsive">
                </td>
                <td>{{this.price}}</td>
                {{!-- href="/instructor/course/{{this._id}}/post" --}}
                <td><button class="btn btn-outline-danger"
                        data-toggle="modal"
                        data-target="#exampleModal">Edit</button>
                </td>
                <td><a class="btn btn-outline-danger"
                        href="/instructor/course/{{this._id}}/delete">Delete</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    <div class="modal fade" id="exampleModal" tabindex="-1"
        role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"
                        id="exampleModalLabel">Modal title
                    </h5>
                    <button type="button" class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                        <span
                            aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                    <button type="button"
                        class="btn btn-primary">Save
                        changes</button>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <h2>No course your Course Store</h2>
    {{/if}}
</div>
{{/user-profile-layout}}