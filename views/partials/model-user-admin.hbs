<button type="button" class="btn btn-primary"
    data-toggle="modal" data-target="#c{{data._id}}">
    View User
</button>

<!-- Modal -->
<div class="modal fade" id="c{{data._id}}"
    tabindex="{{data._id}}" role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog " role="document"
        style="max-width: 800px; max-height:70%;">
        <div class="modal-content">

            <div class="modal-body ">


                <div class="row">
                    <div class="col-lg-12 m-b30">
                        <div class="widget-box">
                            <div class="wc-title">
                                <h4>User Profile</h4>
                            </div>
                            <div class="widget-inner">
                                <form
                                    class="edit-profile m-b30"
                                    action="/user/updateMe"
                                    method="POST">
                                    <div class="">
                                        <div
                                            class="form-group row">
                                            <div
                                                class="col-sm-10 ml-auto">
                                                <h3>1.
                                                    Personal
                                                    Details
                                                </h3>
                                            </div>
                                        </div>
                                        <div
                                            class="form-group row">
                                            <label
                                                class="col-sm-2 col-form-label">Full
                                                Name</label>
                                            <div
                                                class="col-sm-7">
                                                <input
                                                    class="form-control"
                                                    value="{{data.name}}"
                                                    disabled />
                                            </div>
                                        </div>
                                        <div
                                            class="form-group row">
                                            <label
                                                class="col-sm-2 col-form-label">Email</label>
                                            <div
                                                class="col-sm-7">
                                                <input
                                                    class="form-control"
                                                    type="email"
                                                    value={{data.email}}
                                                    disabled />
                                            </div>
                                        </div>

                                        <div
                                            class="form-group row">
                                            <label
                                                class="col-sm-2 col-form-label">Address</label>
                                            <div
                                                class="col-sm-7">
                                                <input
                                                    class="form-control"
                                                    type="text"
                                                    name="address"
                                                    disabled
                                                    value="{{data.address}}" />
                                            </div>
                                        </div>
                                        {{#if (ifCondInstructor data.role)}}
                                        <div
                                            class="form-group row">
                                            <label
                                                class="col-sm-2 col-form-label">Description:</label>
                                            <div
                                                class="col-sm-7">
                                                <textarea
                                                    class="form-control"
                                                    type="text"
                                                    name="description">
                                                    {{{data.description}}}</textarea>
                                            </div>
                                        </div>
                                        {{/if}}
                                        <div
                                            class="seperator">
                                        </div>
                                    </div>


                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>