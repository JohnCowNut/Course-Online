<div class="heading-bx left">
    <h2 class="title-head">Sign Up <span>Now</span>
    </h2>
    <p>Login Your Account <a href="/login">Click
            here</a></p>
</div>
<form class="contact-bx" method="POST" action="/register">
    <div class="row placeani">
        <div class="col-lg-12">
            <div class="form-group">
                <div class="input-group">
                    <label>Name</label>
                    <input name="name" type="text"
                        class="form-control" required />
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <div class="input-group">
                    <label>Your Email Address</label>
                    <input name="email" type="email"
                        required class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <div class="input-group">
                    <label>Your Password</label>
                    <input name="password" type="password"
                        class="form-control" required />
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <div class="input-group">
                    <label>Your Password Confirm</label>
                    <input name="passwordConfirm"
                        type="password" class="form-control"
                        required />
                </div>
            </div>
        </div>
        <div class="col-lg-12 m-b30">
            <button type="submit" class="btn button-md">
                Sign Up
            </button>
        </div>
